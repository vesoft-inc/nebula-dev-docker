#!/usr/bin/env bash

if [ "$DOCKER_TAG" = "centos6" ]; then
  docker build -t ${IMAGE_NAME} -f ${DOCKERFILE_PATH} --build-arg VERSION=6 --build-arg AREA=U .
elif [ "$DOCKER_TAG" = "centos7" ]; then
  docker build -t ${IMAGE_NAME} -f ${DOCKERFILE_PATH} --build-arg VERSION=7 --build-arg AREA=U .
elif [ "$DOCKER_TAG" = "ubuntu16" ]; then
  docker build -t ${IMAGE_NAME} -f ${DOCKERFILE_PATH} --build-arg VERSION=16.04 --build-arg AREA=U .
elif [ "$DOCKER_TAG" = "ubuntu18" ]; then
  docker build -t ${IMAGE_NAME} -f ${DOCKERFILE_PATH} --build-arg VERSION=18.04 --build-arg AREA=U .
fi